<div class="container-fluid ">
    <div class="row">
        <div class="col">Sign in</div>
    </div>
    <div class="login_dropdown_form">
        <form>
            <div class="row">
                <div class="col">
                    <h5>Email</h5>
                </div>
            </div>
            <div class="row">
                <div class="col">{{input value=model.email name="dropdown_email" type="text"}}</div>
            </div>
            <div class="row">
                <div class="col">
                    <h5>Password</h5>
                </div>
            </div>
            <div class="row">
                <div class="col">{{input value=model.password name="dropdown_password" type="password"}}</div>
            </div>
            <div class="row">
                <button class="login-button" >Sign in</button>
            </div>
        </form>
    </div>
</div>