<div class="container item_display_wrapper" >
    <div class="row">
        <div class="col"></div>
        <div class="col"></div>
        <div class="col">{{list-filter options='{"options":["Popularity", "Price: (Low - High)", "Price: (High - Low)","Name: (A - Z)", "Name: (Z - A)"]}' sortAction=this.sortAction}}</div>
    </div>

    {{#each bikes as |bike|}}
        <div class="row item_display">
            <div class="row">
            <div class="col-sm-3">
                <img src="{{bike.img}}" alt="" class="item_preview_image" {{action "expand" this on="mouseEnter"}} {{action "deflate" this on="mouseLeave"}}>
            </div>
            <div class="col-sm-6 item_info">
                <div class="row" >
                    {{#link-to 'item' (query-params id=bike._id)}}<span>{{bike.name}}&nbsp;{{bike._id}}</span>{{/link-to}}
                </div>
                <div class="row">
                    <span>{{bike.price}}{{bike.unit}}</span>
                </div>
                <div class="row">
                    <span>{{bike.description}}</span>
                </div>

            </div>
            <div class="col-sm-3">
                <ul>
                    {{#each bike.salesPoints as |point|}}
                    <li>{{point}}</li>
                    {{/each}}
                </ul>
                <div class="view_product_link">
                     {{#link-to 'item' (query-params id=bike._id)}}View Product{{/link-to}}
                </div>
            </div>
        </div>
        </div>

    {{/each}}
</div>

