<div class="container-fluid item_display_list_wrapper">
    <div class="row filters-row">
        <div class="col"></div>
        <div class="col"></div>
        <div class="col">{{list-filter options='{"options":["Popularity", "Price: (Low - High)", "Price: (High - Low)","Name: (A - Z)", "Name: (Z - A)"]}' sortAction=(action 'sortAction')}}</div>
    </div>

    {{#each this.sortedBikes as |bike index|}}
        <div class="row item-row"> 
            <div class="col-md-2 item_preview_iamge"> 
                    <img src="{{bike.img}}" alt="" class="item_preview_image" >
            </div>
            <div class="col-md-7">
                    <div class="row">
                        {{#link-to 'item' (query-params id=bike.id)}}<span>{{bike.name}}</span>{{/link-to}}
                    </div>
 
                    <div class="row">
                        <span>{{bike.description}}</span>
                    </div>
            </div>
            <div class="col-md-3">
                <div class="row">
                    <span class="price">{{format-price bike.price}}{{bike.unit}}</span>
                </div>
                <div class="row">
                    <div class="row-actions">
                        {{#link-to 'item' (query-params id=bike.id) class="btn btn-info view-item-button"}}<h4>View item</h4>{{/link-to}}
                    </div>
                </div>

            </div>
